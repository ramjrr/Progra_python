class Persona:
    def __init__(self, nombre, edad):
        self.nombre = nombre
        self.edad = edad

    @property
    def info(self):
        return f"{self.nombre} tiene {self.edad} años."

    def cumpleanhos(self):
        self.edad += 1
        print(f"Feliz cumpleaños, {self.nombre}! Ahora tienes {self.edad} años.")
